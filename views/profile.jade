html
  head
    title Node Authentication
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
    style
      body 		{ padding-top:80px; word-wrap:break-word; }
  body
    .container
      .page-header.text-center
        h1
          span.fa.fa-anchor
          | Profile Page
        a.btn.btn-default.btn-sm(href='/logout') Logout

      - if(user.facebook && user.facebook.id)
        .row
          //
             FACEBOOK INFORMATION 
          .col-sm-6
            .well
              h3.text-primary
                span.fa.fa-facebook
                |  Facebook
              p
                strong
                  | email : #{user.facebook.email}
                br
                strong
                  | name : #{user.facebook.name}

      - if(user.google && user.google.id)
        .row
          //
             GOOGLE INFORMATION 
          .col-sm-6
            .well
              h3.text-danger
                span.fa.fa-google-plus
                |  Google
              p
                strong
                  | email : #{user.local.email}
                br
                strong
                  | name : #{user.facebook.name}

      - if(user.twitter && user.twitter.id)
        .row
          //
             TWITTER INFORMATION 
          .col-sm-6
            .well
              h3.text-info
                span.fa.fa-twitter
                |  Twitter
              p
                  strong
                    | username : #{user.twitter.username}
                  br
                  strong
                    | diplayName : #{user.twitter.displayName}

      - if(user.local && user.local.email)
        .row
          //
             LOCAL INFORMATION 
          .col-sm-6
            .well
              h3
                span.fa.fa-user
                |  Local
              p
                strong
                  | email : #{user.local.email}


